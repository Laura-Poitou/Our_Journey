{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <section class="log-form">
        <div class="card w-100 mb-3" id="card-container">
            <div class="card-body" id="card-body-container">
                <h1 class="card-title">Connexion</h1>

                <form action="{{ path('front_user_login') }}" method="post" class="login-form">
                    <label id="label-login-form" for="username">Email:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}">

                    <label id="label-login-form" for="password">Mot de passe :</label>
                    <input type="password" id="password" name="_password">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn btn-custom" id="btn-connection">Se connecter</button>
                </form>

            </div>
        </div>
    </section>

{% endblock %}
