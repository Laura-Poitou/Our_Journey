{% extends 'back/layout.html.twig' %}

{% block title %}Destinations{% endblock %}

{% block subbody %}
    <article class="backoffice-sub-homepage">
        <h1 class="backoffice-h1">Toutes les destinations :</h1>

        <table class="table" id="backoffice-table">
            <thead>
                <tr>
                    <th id="id-th">Id</th>
                    <th>Nom</th>
                </tr>
            </thead>
            <tbody>
            {% for destination in destinations %}
                <tr>
                    <td>{{ destination.id }}</td>
                    <td>{{ destination.name }}</td> 
                </tr>
                <tr>
                    <td>
                        <div class="table-link">
                            <a href="{{ path('app_back_destination_show', {'id': destination.id}) }}">
                                <button class="btn btn-custom btn-backoffice btn-read">Lire</button>
                            </a>
                            <a href="{{ path('app_back_destination_edit', {'id': destination.id}) }}">
                                <button class="btn btn-custom btn-backoffice" id="btn-modify-2">Modifier</button>
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_back_destination_new') }}">
            <button class="btn btn-custom btn-backoffice btn-backoffice-add">Ajouter une nouvelle destination</button>
        </a>
    <article>
{% endblock %}

