{% extends 'back/layout.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block subbody %}

    <section class="container">
        <h1 class="backoffice-h1">Utilisateurs</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Password</th>
                    <th>Nickname</th>
                    <th>Birthday</th>
                    <th>Picture</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.nickname }}</td>
                    <td>{{ user.birthday ? user.birthday|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.picture }}</td>
                    <td>
                        <a href="{{ path('app_back_user_show', {'id': user.id}) }}">show</a>
                        <a href="{{ path('app_back_user_edit', {'id': user.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_back_user_new') }}">Create new</a>
    </section>

{% endblock %}
